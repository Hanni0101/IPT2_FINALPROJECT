{
  "version": 2,
  "buildCommand": "cd dashboard && npm install && npm run build",
  "outputDirectory": "dashboard/dist",
  "installCommand": "npm --version",
  "regions": ["iad1"],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/.*",
      "dest": "/api/index.js"
    },
    {
      "src": "/uploads/.*",
      "dest": "/api/index.js"
    },
    {
      "src": "^/(.*)$",
      "dest": "/dashboard/dist/index.html"
    }
  ]
}
